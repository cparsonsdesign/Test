pipeline {
	agent any
	stages {
		stage('build for dev') {
    when {
                branch 'dev'
         }
				steps {
				    withAnt(installation: 'JenkinsAnt', jdk: 'JDK 1.8') {
						sh "ant run"
				    }
            
           
                     				  }
	    }
      
      	stage('build for test') {
    when {
                branch 'Test'
         }
				steps {
				    sh '''
					   echo "HelloWorld"
						'''
            
           
                     				  }
	    }
    stage('build for master') {
    when {
                branch 'master'
         }
				steps {
				    sh '''
					   echo "HelloWorld"
						'''
            
           
                     				  }
	    }
      stage('deploy for develop') {
    when {
                branch 'dev'
         }
				steps { 
					ansibleTower credential: 'FEPDX - jenkins', extraVars: 'build : ${BUILD_NUMBER}', importTowerLogs: true, importWorkflowChildLogs: false, inventory: 'FEPDX', jobTags: '', jobTemplate: '1509', jobType: 'run', limit: '', removeColor: false, skipJobTags: '', templateType: 'job', throwExceptionWhenFail: false, towerServer: 'FEPDX Tower', verbose: false
				}
		}				
		stage('deploy for test') {
    when {
                branch 'test'
         }
				steps { 
					ansibleTower credential: '', extraVars: 'build: ${BUILD_NUMBER}', importTowerLogs: false, importWorkflowChildLogs: false, inventory: '', jobTags: '', jobTemplate: '1476', jobType: 'run', limit: '', removeColor: false, skipJobTags: '', templateType: 'job', throwExceptionWhenFail: false, towerServer: 'FEPDX Tower', verbose: false				}
		}
	}
						
}
